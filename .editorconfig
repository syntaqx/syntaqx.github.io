root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[LICENSE]
insert_final_newline = false

# DOS/Win *requires* BAT/CMD files to have CRLF newlines
[*.{[Bb][Aa][Tt],[Cc][Mm][Dd]}]
end_of_line = crlf
